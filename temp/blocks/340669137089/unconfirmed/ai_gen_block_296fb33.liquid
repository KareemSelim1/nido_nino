{% doc %}
  @prompt
    i want a big wide poster image with big white text in the middle to be the page heading, can you make the heading font like the other page fonts
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-page-heading-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-page-heading__image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-page-heading__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .ai-page-heading__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-page-heading__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-page-heading__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }

  .ai-page-heading__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-page-heading__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 40px 20px;
    max-width: {{ block.settings.text_max_width }}px;
    width: 100%;
  }

  .ai-page-heading__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-style: {{ settings.type_header_font.style }};
    font-weight: {{ settings.type_header_font.weight }};
  }

  @media screen and (max-width: 749px) {
    .ai-page-heading-{{ ai_gen_id }} {
      min-height: {{ block.settings.height | times: 0.6 }}px;
    }

    .ai-page-heading__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.6 }}px;
    }

    .ai-page-heading__content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }
  }
{% endstyle %}

<div class="ai-page-heading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-page-heading__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2400 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-page-heading__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-page-heading__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-page-heading__empty-state-{{ ai_gen_id }}">
          Add a wide poster image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-page-heading__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-page-heading__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-page-heading__title-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page heading poster",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Poster image"
    },
    {
      "type": "range",
      "id": "height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Height",
      "default": 400
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 30,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Text size",
      "default": 60
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "text_max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Text max width",
      "default": 800
    }
  ],
  "presets": [
    {
      "name": "Page heading poster"
    }
  ]
}
{% endschema %}
